%body
  %header チャットグループが作成されました。
  %div.chat-side
    %div.chat-side_user
      %div.chat-side_user-content
        %div.chat-side_user-name user-name
        %a.chat-side_user-edit-user{href: ""}
          %li.fa.fa-cog
        %a.chat-side_user-new-group{href: ""}
          %li.fa.fa-pencil-square-o
    //左のグループ一覧と最新のメッセージの表示
    %div.chat-side_groups
      %div.chat-side_gtoup-list
        %a{href: ""}
          %div.chat-side_group
            %div.chat-side_group-name group-name
            %div.chat-side_group-message group-message
        %a{href: ""}
          %div.chat-side_group
            %div.chat-side_group-name group-name2222222
            %div.chat-side_group-message group-message22222222
  %div.chat-main
    %div.chat-main_header
      %div
        %div.chat-main_header-group.clearfix
          testtes
        %div.chat-main_header-edit-group.btn.btn-outline-info
          Edit
      %div.chat-main_header-members
        testtesttesttesttesttesttesttest
    %div.chat-main_body
      %div.chat-main_body-messages-list
        %div.chat-main_message
          %div.chat-main_message-name message-name
          %div.chat-main_message-time 2018/10/10 11:11
          %div.chat-main_message-body
            %p message-body
            %img.chat-main_message-body-image
        %div.chat-main_message
          %div.chat-main_message-name message-name2
          %div.chat-main_message-time 2018/10/11 11:11
          %div.chat-main_message-body
            %p message-body2message-body2message-body2
            %img.chat-main_message-body-image
        %div.chat-main_message
          %div.chat-main_message-name message-name3
          %div.chat-main_message-time 2018/10/12 11:11
          %div.chat-main_message-body
            %p message-body3
            %img.chat-main_message-body-image
    %div.chat-main_footer
      %form.chat-main_footer-from#new_message{method: "post"}
        %div.chat-main_footer-body.input-group.mb-3
          %input.message#message_body.form-control{placeholder: "type a message", type: "text", name: "message[body]"}
          %button.chat-file.btn-default{type: "button", name: "message_image"}
            %i.fa.fa-image
          %input.submit.btn.btn-lg.btn-primary{type: "submit", name: "commit", value: "send"}
