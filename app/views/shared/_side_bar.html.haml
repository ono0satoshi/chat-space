%div.chat-side
  %div.chat-side_user
    %div.chat-side_user-name
      = current_user.name
    %ul.chat-side_user-fa
      %li.list.chat-side_user-edit-user
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.list.chat-side_user-edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  //左のグループ一覧と最新のメッセージの表示
  %div.chat-side_groups
    - current_user.groups.each do |group|
      %div.chat-side_group
        = link_to group_messages_path(group) do
          %div.chat-side_group-name
            = group.name
          %div.chat-side_group-message
            = group.show_last_message
